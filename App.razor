<MudRTLProvider RightToLeft="true">
    <CascadingAuthenticationState>
        <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="Assemblies">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <NotAuthorizedComponent />
                    </NotAuthorized>
                    <Authorizing>
                        <LoadingComponent Class="pt-5" Text="درحال دریافت اطلاعات..." />
                    </Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <PageNotFound />
            </NotFound>
        </Router>
    </CascadingAuthenticationState>


    <MudThemeProvider Theme="RazyTheme" />
    <MudLayout>
        <MudSnackbarProvider />
    </MudLayout>
</MudRTLProvider>

@code
{
    MudTheme RazyTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = "#f58025",
                Secondary = "#122147",

            }
        };

    private List<Assembly> Assemblies = new();

    protected override void OnInitialized()
    {
        Assemblies.Add(typeof(AdminPanel._Imports).Assembly);
        Assemblies.Add(typeof(Customers._Imports).Assembly);

        base.OnInitialized();
    }
}